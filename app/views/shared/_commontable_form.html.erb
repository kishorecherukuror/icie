<%= f.fields_for :commontable do |ctable| %>
     				<div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Title</label>
                      <div class="col-sm-10">
                        <%= ctable.text_field :heading, :class=>"form-control", :id=>"input-id-1" %>
                      </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                    
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Content</label>
                      <div class="col-sm-10">
                         <%= ctable.cktext_area :content, :class=>"form-control", :id=>"id-1" %>
                      </div>
                    </div>
                    <% if show_point==true %>
	                    <div class="form-group">
	                      <label class="col-sm-2 control-label" for="input-id-1">Point</label>
	                      <div class="col-sm-10">
	                         <%= ctable.text_field :points, :class=>"form-control", :id=>"id-1" %>
	                      </div>
	                    </div>
	                    <div class="line line-dashed line-lg pull-in"></div>
	                 <% end %>  
                    
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Image</label>
                      <div class="col-sm-10">
                        <%= ctable.file_field :image, :class=>"form-control", :id=>"input-id-3" %>
                      </div>
                    </div>     
              
                    <div class="line line-dashed line-lg pull-in"></div>
    <% end %>