

          
            <section class="panel">
                <header class="panel-heading font-bold">
                  Employee elements
                </header>
                <div class="panel-body">
                  <%= form_for @employee, :url=>@url, :html=>{:class=>"form-horizontal"}  do |f| %>
                    <% if @employee.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this news from being saved:</h2>

                        <ul>
                        <% @employee.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">First Name</label>
                      <div class="col-sm-10">
                        <%= f.text_field :first_name, :class=>"form-control", :id=>"input-id-1" %>
                      </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                    
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Middle Name</label>
                      <div class="col-sm-10">
                        <%= f.text_field :middle_name, :class=>"form-control", :id=>"input-id-1" %>
                      </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                    
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Last Name</label>
                      <div class="col-sm-10">
                        <%= f.text_field :last_name, :class=>"form-control", :id=>"input-id-1" %>
                      </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                    
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Contact</label>
                      <div class="col-sm-10">
                         <%= f.text_field :contact, :class=>"form-control", :id=>"id-1" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Address</label>
                      <div class="col-sm-10">
                         <%= f.text_area :address, :class=>"form-control", :id=>"id-1" %>
                      </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                    
                    <% if params[:action]=="new" %>
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-id-1">Email</label>
                        <div class="col-sm-10">
                          <%= f.text_field :email, :class=>"form-control", :id=>"input-id-3" %>
                        </div>
                      </div>     
                      <div class="line line-dashed line-lg pull-in"></div>

                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-id-1">Password</label>
                        <div class="col-sm-10">
                          <%= f.password_field :password, :class=>"form-control", :id=>"input-id-3" %>
                        </div>
                      </div>     
                      <div class="line line-dashed line-lg pull-in"></div>
                      
                      <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-id-1">Password Confirmation</label>
                        <div class="col-sm-10">
                          <%= f.password_field :password_confirmation, :class=>"form-control", :id=>"input-id-3" %>
                        </div>
                      </div>     
                      <div class="line line-dashed line-lg pull-in"></div>
                    <%end%>
                    <div class="form-group">
                      <div class="col-sm-4 col-sm-offset-2">
                        <button type="button" class="btn btn-white">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                      </div>
                    </div>
                  <%end%>
                </div>
             
        


