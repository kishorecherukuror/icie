  
            <section class="panel">
                <header class="panel-heading font-bold">
                  News elements
                </header>
                <div class="panel-body">
                  <%= form_for @news, :html=>{:class=>"form-horizontal"}  do |f| %>
                    <% if @news.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@news.errors.count, "error") %> prohibited this news from being saved:</h2>

                        <ul>
                        <% @news.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Title</label>
                      <div class="col-sm-10">
                        <%= f.text_field :title, :class=>"form-control", :id=>"input-id-1" %>
                      </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                    
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Content</label>
                      <div class="col-sm-10">
                         <%= f.cktext_area :content, :class=>"form-control", :id=>"id-1" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Point</label>
                      <div class="col-sm-10">
                         <%= f.text_field :points, :class=>"form-control", :id=>"id-1" %>
                      </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                    
                    
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Image</label>
                      <div class="col-sm-10">
                        <%= f.file_field :image_a, :class=>"form-control", :id=>"input-id-3" %>
                      </div>
                    </div>     
              
                    <div class="line line-dashed line-lg pull-in"></div>
                    <div class="form-group">
                      <div class="col-sm-4 col-sm-offset-2">
                        <button type="button" class="btn btn-white">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                      </div>
                    </div>
                  <%end%>
                </div>
           


