  
            <section class="panel">
                <header class="panel-heading font-bold">
                  News elements
                </header>
                <div class="panel-body">
                  <%= form_for @post, :html=>{:class=>"form-horizontal"}  do |f| %>
                    <% if @post.errors.any? %>
                      <div id="error_explanation">
                        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this news from being saved:</h2>

                        <ul>
                        <% @post.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
                    <div class="form-group">
                      <label class="col-sm-2 control-label" for="input-id-1">Post For</label>
                      <div class="col-sm-10">
                        <%= f.select :user_type, [["HR", "2"], ["Admin", "3"], ["IT", "4"], ["LnD", "5"], ["Info Sec", "6"]], :class=>"form-control", :id=>"id-1" %>
                      </div>
                    </div>
                    <div class="line line-dashed line-lg pull-in"></div>
                    
                   <%= render '/shared/commontable_form', :f=>f, :show_point=>false %>
                    <div class="form-group">
                      <div class="col-sm-4 col-sm-offset-2">
                        <button type="button" class="btn btn-white">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                      </div>
                    </div>
                  <%end%>
                </div>
           


